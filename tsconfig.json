{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "react-native-a11y-highlighter": ["./src/index"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es2020"
  },
  "exclude": ["node_modules", "lib", "example"]
}
